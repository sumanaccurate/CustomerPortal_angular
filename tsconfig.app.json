/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": [],
    "experimentalDecorators": true,
        "allowJs": true
  },

  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],

  "paths": {
    "@app/*": ["src/app/*"],
    "@assets/*": ["src/assets/*"],
    "@environments/*": ["src/environments/*"]
},
  "include": [
    "src/**/*.d.ts"
  ]
}
